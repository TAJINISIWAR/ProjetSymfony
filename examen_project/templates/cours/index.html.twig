{% extends 'base.html.twig' %}
{% block title%} Liste des Cours{% endblock %}

{% block body %}
{{ form_start(form) }}

<div class="form-row align-items-end" >
 <div class="col">
   {{ form_row(form.nom) }}
 </div>

  <div class="col">
   <div class="form-group">
      <button type="submit" class="btn btn-success">Rechercher</button>
    </div>
 </div>
</div>
 {{ form_end(form) }}
 {% if Cours %}
    <table id="cours" class="table table-dark"">
    <br/>
    <br/>
      <thead>
        <tr>
          <th style="color:#FFD700">ID</th>
          <th style="color:#FFD700">Cours</th>
          <th style="color:#FFD700">Type</th>
          <th style="color:#FFD700">Coach</th>
          <th style="color:#FFD700">Salle</th>
        </tr>
      </thead>
      <tbody>
        {% for Cours in Cours %}
          <tr style="color:#A9A9A9">
            <td>{{ Cours.id }}</td>
            <td>{{ Cours.nom }}</td>
            <td>{{ Cours.type }}</td>
            <td>{{ Cours.coach }}</td>
            <td>{{ Cours.salle }}</td>
            <td>{{ Cours.Classe }}</td>
            <td>
              <a href="/Cours/{{ Cours.id }}" class="btn btn-dark" style="color:#A9A9A9">Description</a>
              <a href="/Cours/edit/{{ Cours.id }}" class="btn btn-dark">Modifier</a>
              <a href="/Cours/delete/{{ Cours.id }}" class="btn btn-danger" 
              onclick="return confirm('Etes-vous sÃ»r de supprimer ce Cours?');">Supprimer</a>  
            </td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  {% else %}
    <h1>Aucun cours</h1>
  {% endif %} 
{% endblock %}